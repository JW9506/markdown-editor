{
  "name": "markdown-editor",
  "version": "1.0.0",
  "license": "MIT",
  "author": {
    "name": "Jayden Wong",
    "email": "cf.dota@gmail.com"
  },
  "main": "src/js-out/main.js",
  "scripts": {
    "lint": "eslint . --ext js,jsx,ts,tsx",
    "start:tsc": "tsc -w",
    "start:render": "cd ./src/react-src && yarn start",
    "start:main": "wait-on -i 1000 http://localhost:3123 && electron .",
    "start": "concurrently -k \"yarn:start:*\"",
    "dist": "electron-builder --win --x64",
    "dist:dir": "rimraf dist/ && yarn dist --dir",
    "build:render": "cd ./src/react-src && yarn build"
  },
  "build": {
    "appId": "Markdown App",
    "productName": "Markdown Editor",
    "files": [
      "package.json",
      "./src/js-out/**/*",
      "./src/react-src/dist/**/*"
    ],
    "directories": {
      "buildResources": "src/assets"
    },
    "copyright": "Copyright Â© 2020 ${author}",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/assets/icon.ico",
      "artifactName": "${productName}-Web-Setup-${version}-.${ext}",
      "publisherName": "Jayden Wong"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": false
    }
  },
  "dependencies": {
    "electron-is-dev": "^1.2.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "concurrently": "^5.2.0",
    "devtron": "^1.4.0",
    "electron": "10.1.3",
    "electron-builder": "^22.9.1",
    "electron-store": "^6.0.1",
    "nodemon": "^2.0.4",
    "typescript": "4.0.3",
    "wait-on": "^5.2.0"
  }
}
